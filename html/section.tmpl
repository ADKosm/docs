<div class="section" id="section_{{.PrimaryTag.Name}}">
  {{if .Parent}}
  <h{{headerDepth .}} class="section-header"><a name="{{.PrimaryTag.Name}}"></a>
    {{- if .Parent -}}
      <span class="section-number">{{.Number}} </span>
    {{- end -}}
    {{- .Title | render -}}
  </h{{headerDepth .}}>
  {{end}}

  {{.Body | render}}

  {{if not .SplitSections}}
    {{range .Children}}
      {{template "section.tmpl" .}}
    {{end}}
  {{end}}
</div>
